<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:keepScreenOn="true">

	<androidx.camera.view.PreviewView
		android:id="@+id/preview_view"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/control" />

	<com.phonegap.plugins.barcodescanner.GraphicOverlay
		android:id="@+id/graphic_overlay"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="@id/preview_view"
		app:layout_constraintLeft_toLeftOf="@id/preview_view"
		app:layout_constraintRight_toRightOf="@id/preview_view"
		app:layout_constraintTop_toTopOf="@id/preview_view" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/text_prompt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@null"
		android:textAlignment="center"
		android:textColor="@color/white"
		app:layout_constraintBottom_toBottomOf="parent"
		tools:text="Hallo Welt" />

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@id/control"
		android:layout_width="0dp"
		android:layout_height="60dp"
		android:background="#000"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.appcompat.widget.AppCompatImageButton
			android:id="@+id/button_cameraswitch"
			android:layout_width="60dp"
			android:layout_height="match_parent"
			android:adjustViewBounds="true"
			android:background="@null"
			android:padding="6dp"
			android:scaleType="fitCenter"
			android:src="@drawable/barcode_cameraswitch"
			app:layout_constraintStart_toStartOf="parent" />

		<androidx.appcompat.widget.AppCompatImageButton
			android:id="@+id/button_torch"
			android:layout_width="60dp"
			android:layout_height="match_parent"
			android:adjustViewBounds="true"
			android:background="@null"
			android:padding="6dp"
			android:scaleType="fitCenter"
			android:src="@drawable/barcode_torch"
			app:layout_constraintEnd_toEndOf="parent" />

	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
